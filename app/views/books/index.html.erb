<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= link_to t(".show"), book %></td>
        <td><%= link_to t(".edit"), edit_book_path(book) if book.user == current_user %></td>
        <td><%= link_to t(".destroy"), book, method: :delete, data: { confirm: t(".check_destroy")  } if book.user == current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @books %>
<%= link_to t(".new"), new_book_path %>
