<p>
  <strong><%= Book.human_attribute_name(:title) %></strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:memo) %></strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:author) %></strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:picture) %></strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<p>
  posted by <%= link_to @book.user.name, user_path(@book.user) %>
</p>

<h2><%= t("comments.comment") %></h2>
<%= render "shared/comments", comments: @comments%>

<h2><%= t("comments.post_comment") %></h2>
<%= render "shared/comment_form", comment: [@book, @comment]%>

<%= link_to t(".edit"), edit_book_path(@book) %> |
<%= link_to t("views.defaults.back"), books_path %>
