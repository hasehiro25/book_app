<% comments.each do |comment| %>
  <div class="card mb-2 p-1" style="width: 25rem;">
    <%= br_with_escape(comment.content) %>
    <%= link_to comment.user.name, comment.user %>
    <%= l(comment.created_at, format: :long) %>

    <% if comment.user.has_edit_authority? %>
      <%= link_to t("comments.edit"), edit_comment_path(comment)%>
      <%= link_to t("comments.delete"), comment_path(comment), method: :delete, data: { confirm: t("comments.delete_confirmation") } %>
    <% end%>
  </div>
<%end%>
