<div class="d-inline-block mt-2">
  posted by: <%= link_to @report.user.name, @report.user %>,
  <%= l(@report.created_at, format: :long) %>
</div>

<h1><%= @report.title %></h1>
<%= br_with_escape(@report.body) %>

<% if current_user == @report.user%>
  <div>
    <div class="d-inline-block mb-3">
      <%= link_to t(".edit"), edit_report_path(@report), class: "btn btn-outline-primary inline" %>
    </div>
    <div class="d-inline-block">
      <%= link_to t(".delete"), @report, method: :delete, class: "btn btn-outline-danger", data: { confirm: t(".alert_delete") } %>
    </div>
  </div>
<% end %>

<h2> コメント </h2>
<% @comments.each do |comment| %>
  <div class="card mb-2 p-1" style="width: 25rem;">
    <%= br_with_escape(comment.content) %>
    <%= link_to comment.user.name, comment.user %>
    <%= l(comment.created_at, format: :long) %>

    <% if current_user == comment.user%>
      <%= link_to "編集", edit_comment_path(comment)%>
      <%= link_to "削除", comment_path(comment), method: :delete, data: { confirm: "削除してよろしいですか" } %>
    <% end%>
  </div>
<%end%>

<h2> コメントする </h2>
<%=render "shared/comment_form", comment: [@report, @comment]%>

<%= link_to t(".report_list"), reports_path %>
